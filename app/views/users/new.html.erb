<div class="container check-back">
  <h3 class="text-center">Register</h3>
    <div class="col-lg-10 col-sm-8">
      <div class="form-group">
        <%= form_for @user do |f|%>
          <div class="form-group row">
            <%= f.label :name, class: 'col-sm-2 col-form-label' %> <br>
            <div class="col-sm-10">
              <%= f.text_field :name, required: true, class: 'form-control' %>
            </div>
          </div>
          <br>
          <div class="form-group row">
            <%= f.label :email, class: 'col-sm-2 col-form-label' %><br>
            <div class="col-sm-10">
              <%= f.text_field :email, required: true, class: 'form-control' %>
            </div>
          </div>
              <br>
              <%= f.button 'Save', class: 'btn btn-modify'%>
          </div>
        <% end %>
      </div>
    </div>
</div>


