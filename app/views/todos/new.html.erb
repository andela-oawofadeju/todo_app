<h1>Todo</h1>
<div class="container table-container">
  <%= form_for @todo do |t|%>
  <div class="form-group row form-modify title-edit">
    <%= t.label :title, class:'modify-title col-form-label'%>
    <div class="col-sm-4">
      <%= t.text_field :title, required: true, class: 'form-control'%>
    </div>
  </div>
  
  <div class="form-group row form-modify">
    <%= t.label :content, class: 'col-form-label'%>
    <div class="col-sm-4">
      <%= t.text_field :content, required: true, class: 'form-control'%> <br>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= t.submit 'Create Todo', class: 'btn btn-modify' %>
      </div>
    </div>
  <% end %>
</div>